<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3A3A3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/yellowActivateButton"
        android:layout_width="139dp"
        android:layout_height="79dp"
        android:onClick="onClickSetBackgroundYellow"
        android:text="@string/yellowButton"
        app:backgroundTint="#FFFB00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <Button
        android:id="@+id/greenActivateButton"
        android:layout_width="139dp"
        android:layout_height="79dp"
        android:onClick="onClickSetBackgroundGreen"
        android:text="@string/greenButton"
        app:backgroundTint="#00FF10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788" />

    <Button
        android:id="@+id/redActivateButton"
        android:layout_width="139dp"
        android:layout_height="79dp"
        android:onClick="onClickSetBackgroundRed"
        android:text="@string/redButton"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />
</androidx.constraintlayout.widget.ConstraintLayout>